<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
	<RelativeLayout 
	    android:id="@+id/linedata"
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:gravity="center"
	    android:orientation="horizontal" >
	    
	   <ImageView
        android:id="@+id/priceListviewimage"
        android:layout_alignParentLeft="true"
	    android:layout_width="27dip"
	    android:layout_height="27dip"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="10dip"
	    android:background="@drawable/title"
	 	/>
	    
	    <TextView
	        android:id="@+id/pricemingchengtext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="60dip"
	        android:text="名称" 
	        android:textSize="14sp"
	        android:textColor="#7b7b7b"
			android:gravity="right" 	 
	        />
	   <TextView
	        android:id="@+id/pricepricetext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="60dip"
	        android:text="价格" 
	        android:textSize="14sp"
	        android:textColor="#f75000"
			android:gravity="right" 	 
	        />	
	</RelativeLayout>
	        
      <ImageView
        		android:id="@+id/gerenxinxixian1"
	    		android:layout_height="1dip"
	    		android:layout_width="wrap_content"
	    		android:background="@drawable/huixian"

	    /> 
</LinearLayout>
