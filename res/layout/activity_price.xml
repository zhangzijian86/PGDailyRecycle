<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >  
      
    <LinearLayout
        android:id="@+id/linefanhui"
       	android:layout_width="80dip"
       	android:layout_height="40dip"
       	android:layout_alignParentTop="true"
       	android:layout_alignParentLeft="true"
	     >
	    <ImageView
	        android:id="@+id/pricefanhui"
	        android:layout_marginTop="6dip"
	        android:layout_alignParentLeft="true" 
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="6dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/zuo"
		 />        
    </LinearLayout>      
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:text="@string/recycle_jiage" 
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#109200"
        android:layout_centerInParent="true"
		android:gravity="center"		 
        />    
    </RelativeLayout>    
    
    <ImageView
        android:id="@+id/priceimage"
        android:layout_below="@id/tou"
	    android:layout_marginTop="20dip"
	    android:layout_width="70dip"
	    android:layout_height="70dip"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/title"
	 />
    
    <TextView
        android:id="@+id/pricetitle"
        android:layout_below="@id/priceimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:text="13581905786" 
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#109200"
        android:layout_centerHorizontal="true"
		 android:gravity="center"		 
        />  
        
      <ImageView
        		android:id="@+id/gerenxinxixian1"
        		android:layout_below="@id/pricetitle"
        		android:layout_marginTop="12dip"
				android:layout_marginRight="22dip"			
	    		android:layout_alignParentRight="true"
	    		android:layout_marginLeft="22dip"				
	    		android:layout_alignParentLeft="true"
	    		android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:background="@drawable/huixian"
	    		android:layout_centerHorizontal="true"
	    /> 
	    
      <ListView 
          android:id="@+id/pricelistview"
          android:layout_below="@id/gerenxinxixian1"
          android:layout_marginRight="25dip"			
	      android:layout_alignParentRight="true"
	      android:layout_marginLeft="25dip"				
	      android:layout_alignParentLeft="true"
	      android:layout_height="250dip"
	      android:layout_width="wrap_content"
	      android:divider="#00000000"
        >      
      </ListView>
      
      <Button
      android:id="@+id/priceyuyuebt"
      android:layout_width="150dip"
      android:layout_height="50dip"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="40dip"
      android:background="@drawable/zhuce_queding"
      android:gravity="center"
      android:text="预约"
      android:textColor="#ffffff"
      android:textSize="18sp" />
       
</RelativeLayout>